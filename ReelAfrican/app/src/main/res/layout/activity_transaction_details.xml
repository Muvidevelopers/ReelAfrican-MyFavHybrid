<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/primary_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Details"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/pageTitleColor"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:id="@+id/transactionTitleTextView"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/transactionDateLayout"
            android:layout_margin="5dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionDateTitleTextView"
                android:text="Transaction Date :"
                android:textSize="14dp"
                android:textColor="@color/alreadyMemberTextColor"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/transactionDateTextView"
                android:ellipsize="end"
                android:textColor="@color/alreadyMemberTextColor"
                android:maxLines="1"
                android:text=""
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/transactionOrderLayout"
            android:layout_margin="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionOrderTitletextView"
                android:text="Order Id :"
                android:textSize="14dp"
                android:textColor="@color/alreadyMemberTextColor"

                android:layout_weight="1"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionOrdertextView"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="@color/alreadyMemberTextColor"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/transactionAmountLayout"
            android:layout_margin="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionAmountTitletextView"
                android:text="Amount :"
                android:textSize="14dp"
                android:textColor="@color/alreadyMemberTextColor"

                android:layout_weight="1"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionAmounttextView"
                android:textSize="14dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="1"
                android:textColor="@color/alreadyMemberTextColor"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/transactionInvoiceLayout"
            android:layout_margin="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionInvoiceTitletextView"
                android:text="Invoice :"
                android:textSize="14dp"
                android:textColor="@color/alreadyMemberTextColor"

                android:layout_weight="1"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/transactionInvoicetextView"
                android:layout_weight="1"
                android:textColor="@color/alreadyMemberTextColor"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/transactionStatusLayout"
            android:layout_margin="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionStatusTitletextView"
                android:text="Transaction Status :"
                android:textSize="14dp"
                android:textColor="@color/alreadyMemberTextColor"

                android:layout_weight="1"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionStatustextView"
                android:layout_weight="1"
                android:textSize="14dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/alreadyMemberTextColor"
                android:text=""
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/transactionPLanNameLayout"
            android:layout_margin="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionPlanNameTitleTextView"
                android:text="Plan Name :"
                android:textSize="14dp"
                android:textColor="@color/alreadyMemberTextColor"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionPlanNameTextView"
                android:layout_weight="1"
                android:textSize="14dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/alreadyMemberTextColor"
                />

        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:id="@+id/transactionDownloadButton"
            android:text="DOWNLOAD"
            android:background="@drawable/button_radious"
            android:textColor="@color/buttonTextColor"
            android:textAllCaps="false"
            android:layout_margin="15dp"
            android:stateListAnimator="@null"
            android:paddingLeft="20dp"
            android:textSize="17dp"
            android:paddingRight="20dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/noInternet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackgroundColor"
        android:visibility="gone"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tryAgainButton"
            android:gravity="center"
            android:maxLines="4"
            android:id="@+id/no_internet_text"
            android:singleLine="false"
            android:text="No Internet Connection / No Data"
            android:textColor="@color/noInternetColor"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tryAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/button_background"
            android:padding="8dp"
            android:text="Try again !"
            android:textColor="@color/buttonTextColor"
            android:textSize="20dp" />
    </RelativeLayout>

</LinearLayout>