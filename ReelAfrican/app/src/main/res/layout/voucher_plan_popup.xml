<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/select_purchase_type_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Select Purchase Type"
                android:textColor="@color/pageTitleColor"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/heading"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/button_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp">

            <RadioButton
                android:id="@+id/completeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Show"

                android:textColor="@color/pageTitleColor"
                android:textSize="15dp" />
            <!--  android:button="@drawable/radiobutton_style"-->

            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingLeft="10dp">

            <RadioButton
                android:id="@+id/seasonRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Season"
                android:textColor="@color/pageTitleColor"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingLeft="10dp">

            <RadioButton
                android:id="@+id/episodeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Episode"
                android:textColor="@color/pageTitleColor"
                android:textSize="15dp" />

        </LinearLayout>

        <Button
            android:id="@+id/payNowButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_radious"
            android:stateListAnimator="@null"
            android:gravity="center"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/pageTitleColor"
            android:textSize="17dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/border_color" />
    </LinearLayout>
</LinearLayout>