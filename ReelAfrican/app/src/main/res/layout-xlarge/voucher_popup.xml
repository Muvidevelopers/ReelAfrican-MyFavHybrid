<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_result3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="3dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/select_purchase_type_background"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/content_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase"
                    android:textColor="@color/pageTitleColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content Name"
                    android:textColor="@color/pageTitleColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/select_purchase_type_line" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/voucher_code"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:layout_weight="2"
                android:hint="Enter Voucher Code"
                android:paddingLeft="10dp"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="17dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/apply"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_radious"
                android:text="APPLY"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/voucher_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:text="Voucher Applied Successfully!!"
                android:textColor="@color/button_background"
                android:textSize="16dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/watch_now"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:background="@drawable/voucher_inactive_button"
                android:text="      Wathc Now      "
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="#7f7f7f"
                android:textSize="17dp" />

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/button_background" />
</LinearLayout>
