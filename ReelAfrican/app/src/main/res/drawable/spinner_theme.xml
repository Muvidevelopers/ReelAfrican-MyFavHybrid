<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#e2e1e1"
                android:endColor="#e2e1e1"
                android:startColor="#e2e1e1"
                android:type="linear" />

            <stroke
                android:width="1dp"
                android:color="#7a7a7a" />

            <corners android:radius="1dp" />

            <padding
                android:left="0dp"
                android:right="0dp" />
        </shape>
    </item>
    <item
        android:width="18dp"
        android:height="18dp"
        android:drawable="@drawable/spinner_arrow"
        android:gravity="right|center"
        android:right="10dp" />


</layer-list>
